{
  "name": "mosswall-ai-assistant",
  "version": "1.0.0",
  "description": "An Electron-based desktop application powered by GitHub Copilot SDK for moss wall knowledge",
  "main": "dist/main/index.js",
  "author": "sekka1",
  "license": "Apache-2.0",
  "type": "module",
  "scripts": {
    "start": "npm run build && electron .",
    "dev": "concurrently \"npm run watch:main\" \"npm run watch:preload\" \"wait-on dist/main/index.js && electron .\"",
    "build": "npm run build:main && npm run build:preload && npm run build:renderer",
    "build:main": "tsc -p tsconfig.main.json",
    "build:preload": "tsc -p tsconfig.preload.json",
    "build:renderer": "tsc -p tsconfig.renderer.json && cp src/renderer/index.html dist/renderer/ && cp -r src/renderer/styles dist/renderer/",
    "watch:main": "tsc -p tsconfig.main.json --watch",
    "watch:preload": "tsc -p tsconfig.preload.json --watch",
    "lint": "eslint src --ext .ts,.tsx",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "test:e2e": "playwright test",
    "package": "electron-builder",
    "package:mac": "electron-builder --mac",
    "package:win": "electron-builder --win"
  },
  "dependencies": {
    "@github/copilot-sdk": "^0.1.21"
  },
  "devDependencies": {
    "@playwright/test": "^1.40.0",
    "@types/node": "^20.0.0",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "concurrently": "^8.0.0",
    "electron": "^28.0.0",
    "electron-builder": "^24.0.0",
    "eslint": "^8.0.0",
    "tsx": "^4.21.0",
    "typescript": "^5.0.0",
    "vitest": "^1.0.0",
    "wait-on": "^7.0.0"
  },
  "build": {
    "appId": "com.sekka1.mosswall-ai",
    "productName": "Moss Wall AI Assistant",
    "directories": {
      "output": "release"
    },
    "files": [
      "dist/**/*",
      "data/**/*",
      "package.json"
    ],
    "mac": {
      "category": "public.app-category.utilities",
      "target": [
        {
          "target": "dmg",
          "arch": ["x64", "arm64"]
        },
        {
          "target": "zip",
          "arch": ["x64", "arm64"]
        }
      ]
    },
    "win": {
      "target": [
        "nsis",
        "zip"
      ]
    },
    "linux": {
      "target": [
        "AppImage",
        "deb"
      ]
    }
  }
}
